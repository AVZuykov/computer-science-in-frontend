{
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "ES2020",
    "isolatedModules": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "rootDir": "./src",
    "outDir": "build",
    "paths": {
      "@": ["./src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/node_modules/*", "src/**/*.test.*"]
}
